{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "productImg": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": true
    },
    "productTitle": {
      "type": "string",
      "required": true
    },
    "productPrice": {
      "type": "decimal",
      "required": true
    },
    "productDescription": {
      "type": "text"
    },
    "productRating": {
      "type": "decimal",
      "max": 5,
      "min": 0,
      "required": true
    },
    "productCategory": {
      "type": "enumeration",
      "enum": [
        "Men",
        "Women"
      ],
      "required": true,
      "default": "Men"
    }
  }
}
